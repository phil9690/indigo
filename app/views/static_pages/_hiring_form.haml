= simple_form_for @hiring_message, validate: true do |f|
  .row
    .medium-12.columns
      = f.input :company_name, placeholder: 'Your company name'
    .medium-2.columns
      = f.input :title, placeholder: 'Mr/Mrs/Miss'
    .medium-5.columns
      = f.input :first_name, placeholder: 'John'
    .medium-5.columns
      = f.input :second_name, placeholder: 'Smith'
    .medium-6.columns
      = f.input :address_line_1, placeholder: 'First Line'
    .medium-6.columns
      = f.input :address_line_2, placeholder: 'Second Line'
    .medium-6.columns
      = f.input :city, placeholder: 'Town/City', label: false
    .medium-6.columns
      = f.input :postcode, placeholder: 'Postcode', label: false
    .medium-6.columns
      = f.input :contact_number, placeholder: '01234 567890'
    .medium-6.columns
      = f.input :contact_email, placeholder: 'john.smith@sample.com'
    .medium-6.columns
      = f.input :industry, placeholder: 'Construction'
    .medium-6.columns
      = f.input :examples_of_work, placeholder: 'Welding'
    .small-12.columns
      = f.input :terms_of_service, as: :boolean, label: "#{t('legal.contact_acceptance')}"

    = f.button :submit, "Send", id: 'hiring_button'
