= simple_form_for @looking_message, validate: true do |f|
  .row
    .medium-2.columns
      = f.input :title, placeholder: 'Mr/Mrs/Miss'
    .medium-5.columns
      = f.input :first_name, placeholder: 'John'
    .medium-5.columns
      = f.input :second_name, placeholder: 'Smith'
    .medium-12.columns
      = f.input :address_line_1, placeholder: 'First Line', label: 'Address'
      = f.input :address_line_2, placeholder: 'Second Line', label: false
    .medium-6.columns
      = f.input :city, placeholder: 'Town/City', label: false
    .medium-6.columns
      = f.input :postcode, placeholder: 'Postcode', label: false
    .medium-6.columns
      = f.input :contact_number, placeholder: '01234 567890'
    .medium-6.columns
      = f.input :contact_email, placeholder: 'john.smith@sample.com'
    .medium-6.columns
      = f.input :occupation, placeholder: 'Burglar'
    .medium-6.columns
      = f.input :qualification_1, placeholder: 'Qualification One', label: 'Qualifications'
      = f.input :qualification_2, placeholder: 'Qualification Two', label: false
      = f.input :qualification_3, placeholder: 'Qualification Three', label: false
    .small-12.columns
      = f.input :terms_of_service, as: :boolean
      = f.button :submit, "Signup", id: 'looking_button'
      <a href="#!" class="email-us">or send an email to us</a>
