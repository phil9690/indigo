= simple_form_for [:backend, @job], validate: true do |f|
  = f.input :job_title
  = f.input :description
  = f.input :city
  = f.input :post_code
  = f.input :salary
  = f.input :company
  = f.input :closing_date
  = f.input :job_reference
  = f.select :job_status_id, options_from_collection_for_select(JobStatus.all, :id, 'status')
  = f.select :job_type_id, options_from_collection_for_select(JobType.all, :id, 'job_type')
  = f.button :submit
